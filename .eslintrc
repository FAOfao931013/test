{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },

    "parser": "babel-eslint",
    "plugins": ["react"],

    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    },

    "rules": {
        "no-cond-assign": 2,
        "no-console": 1,
        "semi": [2, "always"],
        "no-dupe-keys": 2,
        "no-duplicate-case": 2,
        "no-unreachable": 2,
        "valid-typeof": 2,
        "dot-location": [2, "property"],
        "comma-spacing": [2, {"before": false, "after": true}],
        "keyword-spacing": 2

    }
}
